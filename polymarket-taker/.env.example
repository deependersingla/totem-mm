# -----------------------------------------------------------------------------
# Polymarket Wallet
# -----------------------------------------------------------------------------
# Polygon wallet private key (hex, 0x-prefixed)
POLYMARKET_PRIVATE_KEY=0x_your_private_key_here
# Polygon wallet address
POLYMARKET_ADDRESS=0x_your_address_here
# Signature type: 0=EOA, 1=POLY_PROXY, 2=GNOSIS_SAFE
POLYMARKET_SIGNATURE_TYPE=0
# Chain: 137=polygon mainnet, 80002=amoy testnet
CHAIN_ID=137
# Neg-risk market (most cricket markets are not neg-risk)
NEG_RISK=false

# -----------------------------------------------------------------------------
# Polymarket CLOB endpoints
# -----------------------------------------------------------------------------
POLYMARKET_CLOB_HTTP=https://clob.polymarket.com
POLYMARKET_CLOB_WS=wss://ws-subscriptions-clob.polymarket.com/ws/market

# -----------------------------------------------------------------------------
# Match Setup
# -----------------------------------------------------------------------------
TEAM_A_NAME=IND
TEAM_B_NAME=SL
# Polymarket token IDs (from resolve_market_from_urls.py)
TEAM_A_TOKEN_ID=
TEAM_B_TOKEN_ID=
# Which team bats first: A or B
FIRST_BATTING=A

# -----------------------------------------------------------------------------
# Budget & Limits
# -----------------------------------------------------------------------------
# Total USDC budget for this session
TOTAL_BUDGET_USDC=100
# USDC to spend buying initial tokens of each team at startup (split 50/50)
INITIAL_BUY_USDC=20
# Max USDC per single trade
MAX_TRADE_USDC=10
# Delay (ms) before placing revert limit orders after a wicket
REVERT_DELAY_MS=3000
# Tick size for Polymarket orders (0.1, 0.01, 0.001, 0.0001)
TICK_SIZE=0.01

# -----------------------------------------------------------------------------
# WebSocket
# -----------------------------------------------------------------------------
# Polymarket requires a PING every <10s to keep the connection alive
WS_PING_INTERVAL_SECS=10

# -----------------------------------------------------------------------------
# Safety
# -----------------------------------------------------------------------------
DRY_RUN=true
LOG_LEVEL=info
